.addr-wrap{
  padding-bottom: 130rpx;
}
.address-item{
  width: 720rpx;
  margin: 0 auto; 
  background: #fff;
  margin-top: 15rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.addr-bottom{
  height: 80rpx;
  display: flex;
  align-content: center;
  border-top: 2rpx solid #eee;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #aaa;
}
.addr-icon{
  display: inline-block;
  width: 60rpx;
  height: 28rpx;
  margin-left: 30rpx;
  margin-top: 7rpx;
  border-radius: 50%;
  background: rgba(255,126,0,0.2);
  border-radius: 12rpx;
  color: #ff7e00;
  font-size: 18rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
}
.user-wrap{
  padding-right:20rpx;
  padding: 30rpx 0 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
}
.user-info{
  font-size: 28rpx;
  color: #000;
  margin-bottom: 6rpx;
  display: flex;
}
.user-name{
  /* float: left; */
  max-width: 210rpx;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.address-info{
  font-size: 28rpx;
  color: #939393;
  line-height: 34rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.edit-addr{
  float: left;
  width: 166rpx;
  height: 160rpx;
  line-height: 160rpx;
  background: #f0d2c0;
}
.edit-img{
  float: left;
  width: 28rpx;
  height: 28rpx;
  margin-top: 68rpx;
  margin-left: 36rpx;
}
.edit-text{
  font-size: 28rpx;
  color: #000000;
  margin-left: 10rpx;
}
.addr-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width:690rpx;
  height: 125rpx;
  padding: 0 30rpx;
  background: #f2f2f2;
}
.addr-btn button{
  width: 689rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.add-addr{
  float: left;
  background-color: #4c92f7;
}
.wx-addr{
  float: right;
  background-color: #4bba15;
}
.none-wrap{
  width: 100%;
  text-align: center;
  margin-top: 100rpx;
}
.none-img{
  width:328rpx;
  height: 232rpx;
  margin: 0 auto; 
}
.apply-record{
  color: #8c8c8c;
  text-align: center;
  font-size: 28rpx;
  margin-top: 40rpx;
}
/* 删除地址弹窗 */
.share_dialog{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5); 
  position:fixed;
  top: 0;
  left: 0;
  z-index: 11;
}
.share-btns{
  display: block;
  width: 100%;
  background: #f2f2f2;
  position: absolute;
  bottom:0;
  left: 0;
}
.share_dialog button{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border: none;
  border-radius: none; 
  background: #fff;
  padding-left: 0;
  padding-right: 0;
  font-size: 30rpx;
  color: #000;
}
.share_dialog button::after{
  border: none;
  border-radius: none;
}
.share_btn{
  margin-bottom: 10rpx;
}
.address-dz{
  width: 24rpx;
  height: 29rpx;
  margin-right: 18rpx;
  margin-top: 7rpx;
}
.address-left{
  width: 563rpx;
}
.address-right{
  width: 129rpx;
  font-size: 24rpx;
  color: #a6a6a6;
  border-left: 2rpx solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.navigator-hover{
  background-color: #fff;
  opacity: 1;
}
