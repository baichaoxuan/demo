/* pages/shop/shop.wxss */
.shop-banner{
  width: 100%;
  height: 322rpx;
}
.shop-banner image{
  width: 100%;
  height: 322rpx;
}
.shop-kind,.shop-list{
  margin:0 22rpx;
}
.shop-kind{
  width: 707rpx;
  height: 91rpx;
  line-height: 91rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 5rpx 14rpx 0rpx 
		rgba(228, 228, 228, 0.69);
  border-radius: 9rpx 9rpx 0rpx 0rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 23rpx;
}
.menu-tab{
  font-size: 30rpx;
  color: #000000;
}
.menu-active{
  color: #4c92f7;
  border-bottom: 10rpx solid #4c92f7;
}

.scroll-wrap{
  width:100%;
} 
.none-wrap{
  width: 100%;
  text-align: center;
  margin-top: 100rpx;
}
.none-img{
  width:328rpx;
  height: 232rpx;
  margin: 0 auto; 
}
.apply-record{
  color: #8c8c8c;
  text-align: center;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.already-bottom{
  height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #b0b0b0;
  line-height: 100rpx;
}

.navigator-hover{
  background-color: none;
  opacity: 1;
}
.cart_right_btn{
	width: 109rpx;
	height: 109rpx;
  position:fixed;
  right:31rpx;
  bottom:177rpx;
  z-index:2;
}
.cart_right_btn image{
  width:100%;
  height:100%;
}
.shop_details_addNum{
  background-color: #de0000;
	font-family: MicrosoftYaHei;
	font-size: 22rpx;
	font-stretch: normal;
  color: #ffffff;
  position: absolute;
  right: -12rpx;
  top:0;
  border-radius: 50%;
  padding: 0 14rpx;
  line-height: 41.8rpx;
  text-align: center;
}
.shop_details{
  display: none;
}

.shop-list{
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}
.shop-li{
  width:349rpx;
  height:503rpx ;
  margin-top: 11rpx;
  background-color: #ffffff;
  position: relative;
}
.shop-li image{
  width: 349rpx;
  height: 349rpx;
}
.shop-li text{
  color: #eb4739;
  font-size: 27rpx;
  line-height: 45rpx;
  margin-left:21rpx;
  font-weight: bold;
}
.shop-name{
  font-size: 24rpx;
  color: #000000;
  line-height: 45rpx;
  margin-left:21rpx;
}
.shop-guige{
  font-size: 22rpx;
  color: #a4a4a4;
  line-height: 45rpx;
  margin-left:21rpx;
}
.shop-li .shop-gouwuche{
  width: 43rpx;
  height: 43rpx;
  position: absolute;
  right:23rpx;
  bottom:14rpx;
}